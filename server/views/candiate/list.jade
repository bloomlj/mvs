extends ../layout

block content
    h1 全部候选人
    a(href="/candiate/add") 添加一条新候选人
    table
        tr
            td ID
            td 名称
            td 说明
            td
        each doc in docs
            tr
                td #{doc._id}
                td #{doc.name}
                td #{doc.note}
                td 
                    a(href="/candiate/#{doc._id}/edit") 修改
                td 
                    a(href="/candiate/#{doc._id}/destroy") 删除

