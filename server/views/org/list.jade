extends ../layout
block breadcrumbs
  ul.breadcrumb
    li
      a(href="/") 首页
      span.divider /
    li
      a(href="/org") 单位
block content
    h1 全部单位
    a(href="/org/add") 添加一条新单位
    table
        tr
            td ID
            td 名称
            td 说明
            td
        each doc in docs
            tr
                td #{doc._id}
                td #{doc.name}
                td #{doc.note}
                td 
                    a(href="/org/#{doc._id}/edit") 修改
                td 
                    a(href="/org/#{doc._id}/destroy") 删除

