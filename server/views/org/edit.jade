extends ../layout
block breadcrumbs
  ul.breadcrumb
    li
      a(href="/") 首页
      span.divider /
    li
      a(href="/org") 单位
      span.divider /
    li.active 修改单位信息
block content
  h1 修改单位信息
  form(method="post",action="/org/#{_id}")
    p
      label(for="name") 名称
    p
      input#name(name="name",type="text",value="#{name}")
    p
      label(for="note") 说明
    p
      textarea#note(name="note") #{note}
    p
      input(type="hidden",name="_method",value="put")
      input(type="submit")
