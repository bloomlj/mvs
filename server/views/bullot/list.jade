extends ../layout

block content
    h1 全部选票
    //a(href="/bullot/add") 添加一条新选票
    table
        tr
            td ID
            td 名称
            td 说明
            td
        each doc in docs
            tr
                td #{doc._id}
                td #{doc.name}
                td #{doc.note}
                td 
                    case doc.vtype
                        when 'vote'
                            a.btn(href="/evalutionplan/addvote/in/#{doc._id}") 添加候选人
                        when 'mark'
                            a.btn(href="/evalutionplan/addmark/in/#{doc._id}") 添加评价指标
                    a(href="/bullot/#{doc._id}/edit") 修改
                    a(href="/bullot/#{doc._id}/destroy") 删除

